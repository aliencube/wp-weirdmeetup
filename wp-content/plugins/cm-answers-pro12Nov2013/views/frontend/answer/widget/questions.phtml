    if($displayOptions['pagination'])
    {
        $arguments           = isset($arguments) ? array_merge($arguments, $_GET) : array();
        $arguments['search'] = isset($search) ? $search : '';
        echo CMA_AnswerController::showPagination($arguments);
    }
    ?>

    <?php
    if($displayOptions['form'])
    {
        /*
